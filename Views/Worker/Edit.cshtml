@model MvcTest.Models.WorkerViewModel

@{
    ViewData["Title"] = "Изменить информацию о сотруднике";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<div class="title row">
    <div class="col-8">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-4">
        <a asp-action="Index" type="button" class="close" aria-label="Close" style="font-size: 3rem;">
            <span aria-hidden="true">&times;</span>
        </a>
    </div>
</div>
<hr />

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>Ошибка! </strong>@errorMessage
    </div>
}

<form action="Edit" method="post" enctype="multipart/form-data">

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PathPhoto)

    <div class="mb-3">
        <label class="form-label">Имя</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
    </div>

    <div class="mb-3">
        <label class="form-label">Фамилия</label>
        <input type="text" class="form-control" asp-for="Surname" />
         <span class="text-danger">@Html.ValidationMessageFor(model => model.Surname)</span>
    </div>

    <div class="mb-3">
        <label class="form-label">Отчество</label>
        <input type="text" class="form-control" asp-for="Patronymic" />
         <span class="text-danger">@Html.ValidationMessageFor(model => model.Patronymic)</span>
    </div>

    <div class="mb-3">
        <label class="form-label">Телефон</label>
        <input type="text" class="form-control" asp-for="Phone" id="phone"/>
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Phone)</span>
    </div>

    <div class="mb-3">
        <label class="form-label">Отдел</label>
        <select class="form-control form-control-l" asp-for="DepartmentID" asp-items="ViewBag.Departments">
        </select>
        <span class="text-danger">@Html.ValidationMessageFor(model => model.DepartmentID)</span>
    </div>

    <div class="mb-3">
        <label>Заменить фото (.jpg, .jpeg, .png)</label>
        <input class="form-control" type="file" asp-for="Photo">
        <span class="text-danger">@Html.ValidationMessageFor(model => model.Photo)</span>
    </div>

    <div class="d-grid">
        <button type="submit" class="bnt btn-success btn-lg btn-block">Изменить</button>
    </div>
</form>

